<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.anupam.app11.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:text="Calculations : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txtCalculations"
        android:textSize="20sp"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="Game Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/txtGameStatus"
        android:textSize="40sp"
        android:textColor="@android:color/holo_green_light"
        android:layout_below="@+id/txtCalculations"
        android:layout_centerHorizontal="true" />

    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="33dp"
        android:id="@+id/imgDice"
        android:layout_below="@+id/txtGameStatus"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/dice6" />

    <Button
        android:text="Restart The Game"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btnRestartTheGame"
        android:layout_width="wrap_content"
        android:layout_below="@+id/imgDice"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
